{% extends "base2.html.twig" %}

{% block title %}Blackjack{% endblock %}

{% block main %}
<h1>Blackjack</h1>

{{ include('flash.html.twig') }}

<p>
    Nu k√∂r vi!
</p>

<li><span>Cards left in deck: {{ game.getDeck.cardsLeft() }}</span></li>
<li><span>Sum of cards in hand: {{ game.getPlayerHand.getHandSum() }}</span></li>

<ul class="cardarea">
    {% for card in game.getPlayerHand.getHand() %}
    <li><span class="card">{{ card.getAsString() }}</span></li>
    {% endfor %}
</ul>

<a href="{{ path('dealer_turn') }}" class="button">Dealers Turn</a>

<ul class="cardLinks">    
    <a href="{{ path('hit_me') }}" class="button">Hit me!</a>
    <form method="post" action="{{ path('stay') }}">
        <input type="hidden" name="handSum" value="{{ game.getPlayerHand.getHandSum() }}">
        <button type="submit" class="button">Stay ... </button>
    </form>

</ul>
<form method="post" action="{{ path('restart') }}">
    <button type="submit" class="button">Restart game</button>
</form>

{% endblock %}
